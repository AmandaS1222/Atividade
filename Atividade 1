import os
os.system("cls || clear")

def questão():
    numeros = [int(input(f"Insira o {i + 1}º número: ")) for i in range(5)]
    
    pares = [num for num in numeros if num % 2 == 0]
    impares = [num for num in numeros if num % 2 != 0]
    
    cont_pares = len(pares)
    cont_impares = len(impares)
    cont_positivos = len([num for num in numeros if num > 0])
    cont_negativos = len([num for num in numeros if num < 0])
    
    maior = max(numeros)
    menor = min(numeros)
    
    media_total = sum(numeros) / len(numeros)
    media_pares = sum(pares) / cont_pares 
    media_impares = sum(impares) / cont_impares
    
    print("\nResultados:")
    print(f"Pares: {cont_pares} Ímpares: {cont_impares}")
    print(f"Positivos: {cont_positivos} Negativos: {cont_negativos}")
    print(f"Maior: {maior} Menor: {menor}")
    print(f"Média Total: {media_total:.2f}")
    print(f"Média Pares: {media_pares:.2f}, Média Ímpares: {media_impares:.2f}")
    print(f"Números em ordem inversa: {numeros[::-1]}")

questão()
